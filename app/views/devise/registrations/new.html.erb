<div class= 'grid gird-col  justify-center items-center shadow-xl w-full'>
  <h2 class='text-4xl text-center mb-5 mx-16'>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-5">
      <%= f.label :user, 'Username' %><br />
      <%= f.text_field :name, class: "input input-bordered input-primary w-full max-w-xs"%>
    </div>
    <div class="field mb-5">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered input-primary w-full max-w-xs" %>
    </div>

    <div class="field mb-5">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered input-primary w-full max-w-xs" %>
    </div>

    <div class="field mb-5">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered input-primary w-full max-w-xs" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-primary w-full' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>