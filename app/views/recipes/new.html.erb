<div class="grid grid-col justify-center items-center w-full shadow-xl p-10">
  <h1 class='text-4xl text-center'>Add Recipe</h1>
  <%= form_with(model: @recipe, url: recipes_path, method: :post) do |form| %>
    <div class="flex flex-col">
      <%= form.label :name, class: "label-text"%>
      <%= form.text_field :name , class: 'input input-bordered input-primary w-full max-w-xs' %>
    </div>

    <div class="flex flex-col">
      <%= form.label :preparation_time %>
      <%= form.number_field :preparation_time, class: 'input input-bordered input-primary w-full max-w-xs' %>
    </div>

    <div class="flex flex-col">
      <%= form.label :cooking_time %>
      <%= form.number_field :cooking_time, class: 'input input-bordered input-primary w-full max-w-xs' %>
    </div>

    <div class="flex flex-col">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'input input-bordered input-primary w-full max-w-xs' %>
    </div>

    <div class=" label cursor-pointer    ">
      <%= form.check_box :public, class: 'checkbox checkbox-primary ' %>
      <%= form.label :public, class: 'label-text' %>
    </div>

    <div class="actions ">
      <%= form.submit "Create Recipe", class: 'btn btn-primary w-full' %>
    </div>
  <% end %>
</div>
