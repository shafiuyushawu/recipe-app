<div class="container w-full shadow-lg  p-5">
  <div class='flex justify-between'>
    <h1 class='text-4xl'>Add Recipe</h1>
    <%= link_to 'Add recipe', new_recipe_path, class: 'btn btn-success btn-sm '%>
  </div>
  <ul class="w-full ">
    <% @recipes.each do |recipe|%>
      <%= link_to recipe_path(recipe) do%>
        <li class ="flex px-5  border shadow-xl m-2 w-full">
          <div class="grid gap-3 w-1/2 my-2">
              <h3 class='text-3xl'><strong><%= recipe.name%></strong></h3>
              <%= button_to 'REMOVE', recipe_path(recipe), method: :delete, class: 'btn btn-secondary btn-sm' %>
          </div><%=  %>
          <p class="text-2xl"><%= recipe.description %></p>
        </li>
      <% end %><%=  %>
    <% end %>
  </ul>
</div>