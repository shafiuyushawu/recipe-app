<%= form_with(model: @food, url: foods_path) do |form| %>
 <div class="flex flex-col gap-4">
    <div class="field">
      <%= form.text_field :name, size:"65x6", placeholder: "Food name", class: "w-1/2" %>
    </div>
    <div class="field">
      <%= form.text_field :measurement_unit,size:"70x6", placeholder: "Measurement unit", class: "w-1/2" %>
    </div>
     <div class="field">
      <%= form.text_field :price,size:"70x6", placeholder: "price", class: "w-1/2" %>
    </div>
     <div class="field">
      <%= form.text_field :quantity,size:"70x6", placeholder: "Quantity", class: "w-1/2" %>
    </div>
  </div>
<% end %>
