<div class="w-full">
  <div class="flex justify-between mb-3">
    <h1 class="text-3xl text-blue-600">Foods list</h1>
    <%= link_to 'Add Food', new_food_path(params[:user_id]), class: 'btn btn-success btn-sm' %>
  </div>
  <table class="table border w-full">
    <thead class="border ">
      <tr class="border text-2xl">
        <th class="border p-2">Food</th>
        <th class="border p-2">Measurement unit</th>
        <th class="border p-2">Unit price</th>
        <th class="border p-2">Quantity</th>
        <th class="border p-2">Actions</th>
      </tr>
    </thead>
    <tbody class="border ">
      <% @foods.each do |food| %>
        <tr class="border ">
          <td class="border   p-1"><%= food.name %></td>
          <td class="border  p-1"><%= food.measurement_unit %></td>
          <td class="border  p-1"><%= food.price %></td>
          <td class="border  p-1"><%=  food.quantity  %></td>
          <td class="border  p-1">
            <%= button_to 'Delete', food_path(food.id), method: :delete, class: 'btn btn-secondary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
